<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="com.sunchin.shop.admin.pojo.ScComment" table="SC_COMMENT">
        <id name="id" type="java.lang.String">
            <column name="ID" length="36" />
            <generator class="assigned"></generator>
        </id>
        <property name="type" type="java.lang.String">
            <column name="TYPE" length="1">
                <comment>类型</comment>
            </column>
        </property>
        <property name="comments" type="java.lang.String">
            <column name="COMMENTS" length="500">
                <comment>评论内容</comment>
            </column>
        </property>
        <property name="createTime" type="java.util.Date">
            <column name="CREATE_TIME" length="7">
                <comment>评论时间</comment>
            </column>
        </property>
        <property name="score" type="java.lang.Byte">
            <column name="SCORE" precision="2" scale="0">
                <comment>评分</comment>
            </column>
        </property>
        <property name="ishidden" type="java.lang.String">
            <column name="ISHIDDEN" length="1">
                <comment>1匿名 0不匿名 默认不匿名</comment>
            </column>
        </property>
        <property name="orderid" type="java.lang.String">
            <column name="ORDERID" length="36">
                <comment>订单id</comment>
            </column>
        </property>
    </class>
</hibernate-mapping>
